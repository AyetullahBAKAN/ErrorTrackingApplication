@model Core.DTOs.UserDto

<button class="btn btn-outline-secondary" onclick="window.history.go(-1);">
    <i class="bi bi-arrow-left"></i> Geri
</button>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" disabled readonly />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SurName" class="control-label"></label>
        <input asp-for="SurName" class="form-control" disabled readonly />
        <span asp-validation-for="SurName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="form-control" disabled readonly />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" disabled readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NormalizedEmail" class="control-label"></label>
        <input asp-for="NormalizedEmail" class="form-control" disabled readonly />
        <span asp-validation-for="NormalizedEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoleId"></label>
        <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control" disabled readonly>
        </select>
    </div>

   <button type="submit" class="btn btn-primary" onclick="return confirm('Silmek istediğinize emin misiniz?')">Delete</button>
</form>
