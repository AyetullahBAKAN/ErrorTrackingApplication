@model List<Core.DTOs.ProjectDto>

<h2>Project List</h2>


<table class="table">
    <thead>
        <tr>
            <th>ProjectName</th>
            <th>CustomerName</th>
            <th>CreatedDate</th>
            <th>IsActive</th>
            <th>Actions</th>
        </tr>   
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@(project.ProjectName)</td>
                <td>@(project.Customer?.CustomerName ?? "-")</td>
                <td>@(project.CreateDate)</td>
                <td>@(project.IsActive)</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            İşlemler
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id">
                                    <i class="bi bi-pencil-fill"></i> Düzenle
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Project" asp-action="ShowProject" asp-route-id="@project.Id">
                                    <i class="bi bi-eye-fill"></i> Görüntüle
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Project" asp-action="DeleteProject" asp-route-id="@project.Id">
                                    <i class="bi bi-calendar-x-fill"></i> Sil
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
        <a class="text-dark btn btn-outline-success mt-3 float-end" asp-controller="Project" asp-action="Create">
            <i class="bi bi-plus-circle-fill float-end"> Add</i>
        </a>
    </tbody>
</table>

