@model Core.DTOs.ErrorCardDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Error Card</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1) !important;
            padding: 2rem;
            margin-top: 2rem;
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25) !important;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004080;
            }

        .btn-outline-secondary {
            border-color: #6c757d;
        }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="mb-4">Edit Error Card</h2>

        <a class="btn btn-outline-secondary mb-3" href="javascript:history.back()">
            <i class="bi bi-arrow-left"></i> Geri
        </a>

        <form asp-action="Edit" method="post" asp-controller="ErrorCard" class="row g-3">
            <div class="col-md-6">
                <div class="form-floating">
                    <select asp-for="UserId" asp-items="ViewBag.users" class="form-select" id="userId">
                        <option value="">Select User</option>
                    </select>
                    <label for="userId">User</label>
                </div>

                <div class="form-floating">
                    <input asp-for="FormNumber" class="form-control" id="formNumber" />
                    <label for="formNumber">Form Number</label>
                    <span asp-validation-for="FormNumber" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <select asp-for="CostId" asp-items="ViewBag.costList" class="form-select" id="costId">
                        <option value="">Select Cost</option>
                    </select>
                    <label for="costId">Cost</label>
                </div>

                <div class="form-floating">
                    <select asp-for="ErrorClassId" asp-items="ViewBag.errorClassList" class="form-select" id="errorClassId">
                        <option value="">Select Error Class</option>
                    </select>
                    <label for="errorClassId">Error Class</label>
                </div>

                <div class="form-floating">
                    <select asp-for="ErrorDefineId" asp-items="ViewBag.errorDefineList" class="form-select" id="errorDefineId">
                        <option value="">Select Error Define</option>
                    </select>
                    <label for="errorDefineId">Error Define</label>
                </div>

                <div class="form-floating">
                    <select asp-for="ErrorDetectionLocationId" asp-items="ViewBag.errorDetectionList" class="form-select" id="errorDetectionLocationId">
                        <option value="">Select Error Detection Location</option>
                    </select>
                    <label for="errorDetectionLocationId">Error Detection Location</label>
                </div>

                <div class="form-floating">
                    <select asp-for="UnitId" asp-items="ViewBag.unitList" class="form-select" id="unitId">
                        <option value="">Select Unit</option>
                    </select>
                    <label for="unitId">Unit</label>
                </div>

                <div class="form-floating">
                    <select asp-for="SolutionAndStandardizitionId" asp-items="ViewBag.solutionList" class="form-select" id="solutionAndStandardizitionId">
                        <option value="">Select Solution and Standardization</option>
                    </select>
                    <label for="solutionAndStandardizitionId">Solution and Standardization</label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <select asp-for="StateId" asp-items="ViewBag.stateList" class="form-select" id="stateId">
                        <option value="">Select State</option>
                    </select>
                    <label for="stateId">State</label>
                </div>

                <div class="form-floating">
                    <select asp-for="RootAnalysisId" asp-items="ViewBag.rootAnalysisList" class="form-select" id="rootAnalysisId">
                        <option value="">Select Root Analysis</option>
                    </select>
                    <label for="rootAnalysisId">Root Analysis</label>
                </div>

                <div class="form-floating">
                    <select asp-for="Pattern.ProjectId" asp-items="ViewBag.projects" class="form-select" id="projectId">
                        <option value="">Select Project</option>
                    </select>
                    <label for="projectId">Project</label>
                </div>

                <div class="form-floating">
                    <select asp-for="Pattern.CustomerId" asp-items="ViewBag.customers" class="form-select" id="customerId">
                        <option value="">Select Customer</option>
                    </select>
                    <label for="customerId">Customer</label>
                </div>

                <div class="form-floating">
                    <select asp-for="Pattern.MontageLetterId" asp-items="ViewBag.montageLetter" class="form-select" id="montageLetterId">
                        <option value="">Select Montage Letter</option>
                    </select>
                    <label for="montageLetterId">Montage Letter</label>
                </div>

                <div class="form-floating">
                    <select asp-for="Pattern.PartId" asp-items="ViewBag.partList" class="form-select" id="partId">
                        <option value="">Select Part</option>
                    </select>
                    <label for="partId">Part</label>
                </div>

                <div class="form-floating">
                    <select asp-for="Pattern.OperationId" asp-items="ViewBag.operationList" class="form-select" id="operationId">
                        <option value="">Select Operation</option>
                    </select>
                    <label for="operationId">Operation</label>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
