@model Core.DTOs.ErrorClassDto

<h2>Edit </h2>

<button class="btn btn-outline-secondary" onclick="window.history.go(-1);">
    <i class="bi bi-arrow-left"></i> Geri
</button>

<form asp-action="Edit" method="post" asp-controller="ErrorClass">

    <div class="form-group">
        <label asp-for="ShortDetail" class="control-label"></label>
        <input asp-for="ShortDetail" class="form-control" />
        <span asp-validation-for="ShortDetail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ErrorMainTitleId"></label>
        <select asp-for="ErrorMainTitleId" asp-items="ViewBag.errorMainTitleList" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="ErrorSubGroupId"></label>
        <select asp-for="ErrorSubGroupId" asp-items="ViewBag.errorSubGroupList" class="form-control"></select>
    </div>




    <button type="submit" class="btn btn-primary">Update</button>
</form>
