@model Core.DTOs.ErrorClassDto

<button class="btn btn-outline-secondary" onclick="window.history.go(-1);">
    <i class="bi bi-arrow-left"></i> Geri
</button>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" asp-controller="ErrorClass">

    <div class="form-group">
        <label asp-for="ShortDetail" class="control-label"></label>
        <input asp-for="ShortDetail" class="form-control" readonly />
        <span asp-validation-for="ShortDetail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ErrorMainTitleId"></label>
        <select asp-for="ErrorMainTitleId" asp-items="ViewBag.errorMainTitleList" readonly disabled class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="ErrorSubGroupId"></label>
        <select asp-for="ErrorSubGroupId" asp-items="ViewBag.errorSubGroupList" readonly disabled class="form-control"></select>
    </div>


    <button type="submit" class="btn btn-primary" onclick="return confirm('Silmek istediğinize emin misiniz?')">Delete</button>

</form>
